<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Camera Preview -->
    <org.opencv.android.JavaCameraView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_Surface"/>

    <!-- Top Bar with Time and Icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#000000"
        android:layout_gravity="top"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:18"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginEnd="16dp"/>

        <!-- Additional Icons -->
        <!-- Replace these with actual icons as needed -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_camera"
            android:tint="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_camera"
            android:tint="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <!-- Add more ImageView elements as needed -->
    </LinearLayout>

    <!-- Bottom Bar with Camera Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#000000"
        android:layout_gravity="bottom">

        <!-- Camera Mode Buttons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOCHE"
            android:textColor="#FFFFFF"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RETRATO"
            android:textColor="#FFFFFF"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOTO"
            android:textColor="#FFDD00"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIDEO"
            android:textColor="#FFFFFF"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MULTIVID"
            android:textColor="#FFFFFF"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Capture Button and Zoom Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center|bottom"
        android:paddingBottom="32dp">

        <!-- Zoom Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.6"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1x"
                android:textColor="#FFDD00"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Capture Button -->
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/capture_button"
            android:contentDescription="Capture Button"
            android:id="@+id/imagebutton"/>
    </LinearLayout>

</FrameLayout>
